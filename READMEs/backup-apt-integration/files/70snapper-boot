
APT::Update::Pre-Invoke {"backup-boot.sh"; };
APT::Update::Pre-Invoke {"snapper -c root create -c timeline --description 'before apt update' && echo '/ snapshot created'"; };
APT::Update::Pre-Invoke {"snapper -c boot create -c timeline --description 'before apt update' && echo '/boot snapshot created'"; };
DPkg::Pre-Invoke {"backup-boot.sh";  };
DPkg::Pre-Invoke {"snapper -c root create -c timeline --description 'before apt changes' && echo '/ snapshot created'"; };
DPkg::Pre-Invoke {"snapper -c boot create -c timeline --description 'before apt changes' && echo '/boot snapshot created'"; };